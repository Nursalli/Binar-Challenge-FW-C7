<div class="table-responsive">
    <a href="/dashboard/history-users/add" class="btn btn-success mb-3"> <i class="bi bi-plus-circle"></i> Add</a>

    <!-- Alert Success -->
    <% if (msg.length !== 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success</strong> <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <!-- Alert Error -->
    <% if (msgError.length !== 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Failed</strong> <%= msgError %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>ID User</th>
                <th>Time (Minute)</th>
                <th>Score (1-100)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop Data User_game_histories -->
            <% data.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.id_user %></td>
                    <td><%= user.time %></td>
                    <td><%= user.score %></td>
                    <td>
                        <a href="#" class="badge bg-danger text-decoration-none deleteHistoryUser" data-id="<%= user.id %>" data-bs-toggle="modal" data-bs-target="#deleteHistoryUser">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteHistoryUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete History User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="#" method="POST">
                <div class="modal-body">
                    Are You Sure?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-danger">Yes</button>
                </div>
            </form>
        </div>
    </div>
</div>